
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="background">
    <h1 class="loginheader">Whitechapel Vehicle Rental Service</h1>
    <div class="loginView">
        <div class="form-group">
            <div class="detail"><input id="username" class="form-control" type="text" placeholder="Username" /></div>
            <div class="detail"><input id="password" class="form-control" type="password" placeholder="Password" /></div>
            <span class="detail text-danger" id="showerror"></span>
            <div class="detail"><button onclick="Login()" type="submit" class="btn btn-primary">Submit</button></div>
        </div>
    </div>
</div>
